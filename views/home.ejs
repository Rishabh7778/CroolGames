<% layout('layouts/boilerplate') %>
    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-12 col-md-8">
                <div class="mb-2">
                    <form class="d-flex" role="search" action="/" method="GET">
                        <input class="form-control me-2 fw-bolder" type="search" placeholder="Search By Game Name"
                            aria-label="Search" name="title" value="<%= searchQuery %>">
                        <button class="btn btn-outline-dark fw-bolder text-light" type="submit">Search</button>
                    </form>
                    <% if (searchQuery) { %>
                        <p class="sq">Showing results for: <%= searchQuery %>
                        </p>
                        <% } %>
                </div>                
                <% for(let g of gam){ %>
                    <div class="mb-4" id="ll">
                        <div id="nn" class="row">
                            <div class="col-12 col-md-4">
                                <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
                                    <div class="carousel-inner">
                                        <% if (Array.isArray(g.image)) { %>
                                            <% g.image.forEach((img, i)=> { %>
                                                <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                                                    <img src="<%= img.url %>" class="d-block w-100" alt=""
                                                        crossorigin="anonymous">
                                                </div>
                                                <% }) %>
                                                    <% } else { %>
                                                        <div class="carousel-item active">
                                                            <img src="<%= g.image %>" class="d-block w-100" alt=""
                                                                crossorigin="anonymous">
                                                        </div>
                                                        <% } %>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a href="/games/<%= g._id %>" id="ff">
                                            <%= g.title %>
                                        </a>
                                    </h5>
                                </div>
                                <div class="mt-1">
                                    <p class="category mb-0">CATEGORY: <%= g.category %>
                                    </p>
                                    <div class="mt-1" id="hh-container">
                                        <p class="description" id="hh">
                                            <%= g.description %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>
