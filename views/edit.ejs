<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
        <div class="card-shadow">
            <div class="card-body" id="ss">
                <h3 class="card-title" id="username">Update Games</h3>
                <form action="/games/<%= g._id %>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                    <div>
                        <label class="form-label" for="games[title]">Edit Game Title</label>
                        <input class="form-control mb-0" type="text" id="games[title]" name="games[title]" value="<%= g.title %>" required>
                        <div class="invalid-feedback">
                            Please provide a valid Game Title.
                        </div>
                        <div class="valid-feedback">
                            Nice.
                        </div>
                    </div>
                    <div>
                        <label class="form-label" for="games[category]">Enter Game Category</label>
                        <textarea class="form-control" id="games[category]" name="games[category]" required><%= g.category %></textarea>
                        <div class="invalid-feedback">
                            Please provide a valid Game Category.
                        </div>
                        <div class="valid-feedback">
                            Nice.
                        </div>
                    </div>
                    <div>
                        <label class="form-label" for="games[description]">Edit Game Description</label>
                        <textarea class="form-control" id="games[description]" name="games[description]" required><%= g.description %></textarea>
                        <div class="invalid-feedback">
                            Please provide a valid Game Description.
                        </div>
                        <div class="valid-feedback">
                            Nice.
                        </div>
                    </div>
                    <div>
                        <label class="form-label" for="image">Edit Game Images</label><br>
                        <div class="input-group">
                            <input type="file" class="form-control" id="image" name="image" aria-describedby="inputGroupFileAddon04" aria-label="Upload" multiple>
                        </div>
                    </div>
                    <!-- <div>
                        <label class="form-label" for="gameFile">Enter Game File</label><br>
                        <div class="input-group">
                            <input type="file" class="form-control" id="gameFile" name="gameFile" aria-describedby="inputGroupFileAddon04" aria-label="Upload">
                        </div>
                        <div class="invalid-feedback">
                            Please provide a valid Game File.
                        </div>
                        <div class="valid-feedback">
                            Nice.
                        </div>
                    </div> -->
                    <div class="mb-3">
                        <h5>Delete Images</h5>
                        <div class="row row-cols-1 row-cols-md-4 g-4 mb-3">
                            <% if (g.image && g.image.length > 0) { %>
                                <% g.image.forEach((image, i) => { %>
                                    <div class="col">
                                        <div class="card">
                                            <img class="card-img" src="<%= image.url %>" alt="">
                                            <div class="card-img-overlay text-end pt-1 pe-2">
                                                <label class="visually-hidden" for="image-<%= i %>">Delete Image</label>
                                                <input class="form-check-input" type="checkbox" name="deleteImages[]" value="<%= 'files/' +image.url %>" id="image-<%= i %>">
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <p>No images available.</p>
                            <% } %>
                        </div>
                    </div>
                    
                    <div>
                        <button type="submit" class="mb-2 btn btn-success">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

